{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2020"]
  },
  "include": [
    "index.native.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/__tests__/**",
    "**/*.test.*",
    "index.ts",
    "index.web.ts",
    "src/**/*.web.ts"
  ]
}


